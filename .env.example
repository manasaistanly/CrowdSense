# Application
NODE_ENV=development
APP_NAME=SustainaTour
APP_URL=http://localhost:5173
API_URL=http://localhost:3000
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/sustainatour

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRY=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@sustainatour.com
FROM_NAME=SustainaTour

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
